{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Audit Manifest v1",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "enum": [
        "1"
      ]
    },
    "ledger_path": {
      "type": "string"
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "path": {
            "type": "string"
          },
          "sha256": {
            "type": "string"
          }
        },
        "required": [
          "path",
          "sha256"
        ]
      }
    },
    "merkle_root": {
      "type": "string"
    },
    "first_hash": {
      "type": "string"
    },
    "last_hash": {
      "type": "string"
    },
    "total_events": {
      "type": "integer"
    },
    "signers": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "version",
    "ledger_path",
    "entries",
    "merkle_root",
    "last_hash",
    "total_events"
  ]
}