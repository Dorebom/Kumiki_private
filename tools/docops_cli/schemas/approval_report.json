{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Approval Gate Report v1",
  "type": "object",
  "properties": {
    "risk": {
      "type": "string",
      "enum": [
        "low",
        "medium",
        "critical"
      ]
    },
    "reasons": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "require_manual": {
      "type": "boolean"
    },
    "can_automerge": {
      "type": "boolean"
    },
    "labels": {
      "type": "object",
      "properties": {
        "present": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "added": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "removed": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "ci": {
      "type": "object",
      "properties": {
        "checks_passed": {
          "type": "boolean"
        },
        "artifacts": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "required": [
    "risk",
    "require_manual",
    "can_automerge"
  ]
}