{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "DocOps Graph Schema v1",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "enum": [
        "1"
      ]
    },
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "kind",
          "title",
          "path"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "kind": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "source",
          "target",
          "e_type"
        ],
        "properties": {
          "source": {
            "type": "string"
          },
          "target": {
            "type": "string"
          },
          "e_type": {
            "type": "string",
            "enum": [
              "refines",
              "satisfies",
              "depends_on",
              "integrates_with",
              "constrains",
              "conflicts_with",
              "supersedes"
            ]
          },
          "evidence": {
            "type": "string"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          }
        }
      }
    }
  },
  "required": [
    "version",
    "nodes",
    "edges"
  ]
}